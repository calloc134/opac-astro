---
interface Props {
  title: string;
  returnDate: string;
  deadline: string;
  image_url: string;
}

const { title, returnDate, deadline, image_url }: Props = Astro.props;
---

<div
class="w-full flex flex-row border rounded-3xl px-4 py-8 bg-white gap-4"
>
<img
  class="w-1/3 rounded-xl overflow-hidden shadow-lg"
  src={image_url}
/>
<div class="w-2/3 flex flex-col gap-4 justify-between ">
  <div class="overflow-hidden break-words">
    <h1 class="text-md sm:text-2xl md:text-4xl font-bold">
      { title }
    </h1>
  </div>
  <div class="flex flex-row gap-1 justify-between">
    <div
      class="w-full flex rounded-full bg-blue-500 text-white justify-end px-8 text-sm md:text-xl"
    >
      <div>返却日時: ○日</div>
    </div>
    <div
      class="w-full flex rounded-full bg-black text-white justify-end px-8 text-sm md:text-xl"
    >
      <div>期限: あと○日</div>
    </div>
  </div>
</div>
</div>