---
interface Props {
  title: string;
  remaining_days: number;
  lend_date: string;
  return_date: string;
  image_url: string;
}

const { title, remaining_days, lend_date, return_date, image_url }: Props = Astro.props;
---

<div class=`w-full flex flex-row border rounded-3xl px-4 py-8 gap-4 ${remaining_days < 1 ? 'bg-red-100' : remaining_days < 4 ? 'bg-yellow-100' : 'bg-white'}`>
  <img class="w-1/3 rounded-xl overflow-hidden shadow-lg" src={image_url} />
  <div class="w-2/3 flex flex-col gap-4 justify-between">
    <div class="overflow-hidden break-words">
      <h1 class="text-md sm:text-2xl md:text-4xl font-bold">
        {title}
      </h1>
    </div>
    <div class="flex flex-col gap-1 justify-end">
      <div class="w-full flex rounded-full bg-blue-500 text-white justify-between px-8 text-sm md:text-xl flex-row gap-1">
        <div>貸出日時</div>
        <div>{lend_date}</div>
      </div>  
      <div
        class="w-full flex rounded-full bg-blue-500 text-white justify-between px-8 text-sm md:text-xl flex-row gap-1"
      >
        <div>返却日時</div>
        <div>{return_date}</div>
      </div>
      <div
        class="w-full flex rounded-full bg-black text-white justify-between px-8 text-sm md:text-xl flex-row gap-1"
      >
        <div>期限</div>
        <div>
          あと{remaining_days}日
        </div>
      </div>
    </div>
  </div>
</div>
